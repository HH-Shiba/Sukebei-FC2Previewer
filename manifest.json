{
  "manifest_version": 3,
  "name": "FC2 預覽側邊欄 - 雙來源+影片資訊版",
  "version": "3.0",
  "description": "側邊欄開啓後自動從 FC2PPVDB 提取影片主預覽圖、女優名稱和相關影片資訊，同時從官方獲取 Sample Images，並自動設置Cookies通過成人驗證。",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "cookies"
  ],
  "host_permissions": [
    "https://fc2ppvdb.com/*",
    "https://adult.contents.fc2.com/*"
  ],
  "action": {
    "default_title": "切換 FC2 預覽側邊欄"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://sukebei.nyaa.si/*"],
      "js": ["content.js"],
      "css": ["sidebar.css"]
    }
  ]
}
