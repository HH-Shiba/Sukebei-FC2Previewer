{
  "manifest_version": 3,
  "name": "FC2 預覽側邊欄",
  "version": "3.1",
  "description": "自動提取 FC2 影片資訊與預覽圖。",
  "permissions": [
  "activeTab",
  "scripting",
  "storage",
  "tabs",
  "cookies"
],
  "host_permissions": [
  "https://fd2ppv.cc/*",
  "https://*.fc2.com/*"
  ],
  "action": {
    "default_title": "切換 FC2 預覽側邊欄"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://sukebei.nyaa.si/*"],
      "js": ["content.js"],
      "css": ["sidebar.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
